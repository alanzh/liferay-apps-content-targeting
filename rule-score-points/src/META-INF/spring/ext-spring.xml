<?xml version="1.0" encoding="UTF-8"?>

<beans
	default-destroy-method="destroy"
	default-init-method="afterPropertiesSet"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
>

	<!-- Listeners -->

	<bean id="messageListener.score_points_rule_analytics_listener" class="com.liferay.content.targeting.rule.score.points.messaging.AnalyticsMessageListener" />
	<bean id="messageListener.score_points_rule_analytics_hot_deploy_listener" class="com.liferay.content.targeting.rule.score.points.messaging.AnalyticsHotDeployMessageListener">
		<constructor-arg>
			<map>
				<entry key="analyticsMessageListener" value-ref="messageListener.score_points_rule_analytics_listener" />
				<entry key="analyticsMessageDestination" value="liferay/analytics" />
			</map>
		</constructor-arg>
		<constructor-arg name="servletContextNames">
			<array>
				<value>analytics-processor</value>
			</array>
		</constructor-arg>
	</bean>

	<!-- Configurator -->

	<bean id="messagingConfigurator" class="com.liferay.content.targeting.rule.score.points.messaging.config.AnalyticsPluginMessagingConfigurator">
		<property name="analyticsMessageDestination" value="liferay/analytics" />
		<property name="messageListeners">
			<map key-type="java.lang.String" value-type="java.util.List">
				<entry key="liferay/hot_deploy">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.score_points_rule_analytics_hot_deploy_listener" />
					</list>
				</entry>
				<entry key="liferay/analytics">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.score_points_rule_analytics_listener" />
					</list>
				</entry>
			</map>
		</property>
	</bean>
</beans>